{
  "name": "react-mcw",
  "version": "0.1.0",
  "description": "Material Design Components for React",
  "repository": "https://github.com/carlitux/react-mcw",
  "author": "Linkux IT",
  "license": "MIT",
  "flow": "flow",
  "dependencies": {
    "eslint-plugin-react": "^7.3.0",
    "npm-watch": "^0.2.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-router": "^4.2.0",
    "react-router-dom": "^4.2.2"
  },
  "prepublish": "npm run prepublish",
  "watch": {
    "build": "packages/**/src/*.{js,scss}"
  },
  "scripts": {
    "prepublish": "npm-run-all clean build",
    "dev": "npm-run-all --parallel dev:webpack dev:watch",
    "dev:webpack": "cross-env NODE_ENV=development webpack-dev-server --progress --content-base public --inline --hot --host 0.0.0.0",
    "dev:watch": "npm-watch",
    "clean": "del-cli build/**",
    "build": "lerna run build --stream --concurrency=5",
    "lint": "lerna run lint --no-sort --concurrency=5",
    "test": "lerna run test",
    "test:watch": "jest --watchAll",
    "buildApp": "mkdirp build && webpack --progress --colors",
    "buildApp:min": "mkdirp build && cross-env NODE_ENV=production webpack -p --progress --colors"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.2",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-react-display-name": "^6.25.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.5",
    "del-cli": "^1.1.0",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-config-airbnb-base": "^11.3.2",
    "eslint-config-prettier": "^2.3.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.0.1",
    "eslint-plugin-prettier": "^2.2.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "flow-bin": "^0.53.1",
    "flow-typed": "^2.1.5",
    "glob": "^7.1.2",
    "lerna": "^2.0.0",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.0.2",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.5.3",
    "react-transform-catch-errors": "^1.0.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "tern": "^0.21.0",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  }
}
